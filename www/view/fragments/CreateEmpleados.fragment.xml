<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		id="createEmpleados" title="Nuevo Empleado">
    <content>
      <form:SimpleForm >
        <Label text="Nombre"/>
        <Input placeholder="Ingrese el nombre del empleado" value="{name}"/>
      </form:SimpleForm>
    </content>
    <endButton>
      <Button text="Cerrar" press="onCerrar"/>
    </endButton>
		<beginButton>
			<Button
				text="Crear"
				press="onCrear"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>